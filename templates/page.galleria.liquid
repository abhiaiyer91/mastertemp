


<section ng-controller="galleryCtrl">
  <h2>{{page.title}}<br>{% include 'divider' %}</h2>
    <!-- items -->
    <div ng-controller="ModalCtrl">
      {% if customer %}
          {{ page.content}}
      {% else %}
      Please sign up to view the gallery!

      {% endif %}


    </div>

{% raw %}

        <script type="text/ng-template" id="myModalContent.html">

            <div class="modal-header">
                <div class="row">

                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <img ng-src="{{selected.image}}" alt="" class="img-responsive text-center">
                        <br>
                        <div class="row text-center">
                            <h2 class="white"> Follow Me! </h2>
                          <a href="https://www.facebook.com/odell.beckham" target="_blank"><i class="fa fa-facebook-square fa-5x white"></i></a>
                          <a href="https://twitter.com/OBJ_3" target="_blank"><i class="fa fa-twitter-square fa-5x white"></i></a>
                          <a href="http://instagram.com/iam_objxiii" target="_blank"><i class="fa fa-instagram fa-5x white"></i></a>
                        </div>


                    </div>
                    <div class="col-sm-6 white-section">
                        <p class="lead">{{selected.tags | uppercase}}<button class="btn btn-danger pull-right" ng-click="cancel()">x</button></p>
                        <div class="row">
                            <div class="col-sm-3">
                                <img src="http://image.cdnllnwnl.xosnetwork.com/pics33/200/XJ/XJJHENWJNCSTORT.20130506130552.jpg" class="box" style="height:80px;width:80px"/>
                            </div>
                            <div class="col-sm-9">
                                posted by: Odell Beckham Jr. <br>

                                published on {{selected.published | date : 'medium'}}<br>
                                LIKE ME ON:
                                <a href="https://www.facebook.com/odell.beckham" target="_blank"><i class="fa fa-facebook-square fa-2x blue"></i></a>
                                <a href="https://twitter.com/OBJ_3" target="_blank"><i class="fa fa-twitter-square fa-2x blue"></i></a>
                                <a href="http://instagram.com/iam_objxiii" target="_blank"><i class="fa fa-instagram fa-2x blue"></i></a>
                            </div>
                        </div>

                        <div class="commentList" ng-hide="sign">
                            <h2> PLEASE SIGN UP FOR AN ACCOUNT TO POST COMMENTS</h2>
                        </div>

                        <div class="commentList" ng-controller="postCtrl" ng-show="showz">
                            <h4>COMMENTS</h4>
                            <div class="comment">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="scroll">
                                        <input type="hidden" ng-init="comment.id = id" ng-model="comment.id">

                                            <div class="commentText" ng-hide="commview" ng-repeat="(commentId, comment) in comments | orderByPriority | filter:comment.id">

                                                <p>Posted by: {{comment.name}}</p>
                                                <p>"{{comment.text}}"</p>
                                                <p class="commentFooter">Posted on: {{comment.date |date : 'medium'}}</p>

                                            </div>

                                          <div ng-show="commview = true" class="commentText" ng-repeat="comment in viewpost">

                                            <h2> Your COMMENT </h2>

                                                <p>"{{displayText}}"</p>
                                                <p class="commentFooter">Posted on: {{comment.date |date : 'medium'}}</p>

                                            </div>



                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form class="contactForm" ng-submit="addComment();comment.name = {%endraw%}'{{customer.name}}'{%raw%}">
                                <textarea type="text" ng-model="comment.text" name="message" placeholder="Your message"></textarea>
                                <input type="text" class="hidden" ng-init="comment.id = id" ng-model="comment.id">
                                <input type="text" class="hidden" ng-init="comment.name = {%endraw%}'{{customer.name}}'{%raw%}" ng-model="comment.name">
                                <input type="submit" name="submit" class="button blue_bg hover-shadow pull-right glow">
                            </form>

                        </div><!-- end comment -->
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">

        </div>
    </script>
</div>

</section>
{% endraw %}
