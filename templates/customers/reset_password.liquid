        <div class="container">
            <div class="row">
                <div class="text-center uppercase">
                    <h2 class="title">Reset Account Password</h2>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <p class="lead">Enter a new password for {{ email }}</p>
                </div>
            </div>
        </div>
            {% form 'reset_customer_password' %}
            {{ form.errors | default_errors }}
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <div id="password" class="clearfix">
                        <label class="large" for="password">Password</label>
                        <input type="password" placeholder="Password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-12 text-center">
                    <div id="password_confirm" class="clearfix large_form">
                        <label class="large" for="password_confirmation">Password Confirmation</label>
                        <input type="password" placeholder="Password Confirmation" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <div class="action_bottom">
                        <input class="button subHeadBtn" type="submit" value="Reset Password" />
                        <br />
                    </div>
                </div>
            </div>
        </div>
        {% endform %}
