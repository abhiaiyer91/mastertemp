<div id="cart" class="container">
  <!-- Begin empty cart -->
  {% if cart.item_count == 0 %}
<div class="container">
    <div class="padding-top96 padding-bottom96">
        <div class="row">
            <div class="text-center empty-cart">
                <h2 class="uppercase">You don't have any items in your cart!</h2>
                <i class="fa fa-shopping-cart fa-5x color1"></i>
                <div class="row">
                <a href="/collections/all-products" class="button subHeadBtn">Gear</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Begin cart -->
  {% else %}


        <section class="row content">
          <div id="col-main" class="col-md-12 hidden-xs cart-page content">
            <div id="page-header">
              <h2 id="page-title">Shopping Cart</h2>
            </div>
            <form action="./cart.html" method="post" id="cartform" class="clearfix">
              <div class="row-fluid">
                <div class="wrap-table table-responsive">
                  <table class="cart-items haft-border">
                    <colgroup>
                      <col class="checkout-image">
                      <col class="checkout-info">
                      <col class="checkout-price">
                      <col class="checkout-quantity">
                      <col class="checkout-totals">
                      <col class="checkout-delete">
                    </colgroup>
                    <thead>
                      <tr class="top-labels">
                        <th>Product name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>SubTotal</th>
                        <th>Remove</th>
                      </tr>
                    </thead>
                    <tbody>
                       {% for item in cart.items %}
                      <tr class="item suspendisse-tortor-lacus">

                        <td class="title">
                          <ul class="list-inline">
                            <li class="image">
                              <a href="{{item.product.url | within: collections.all}}">
                                <img src="{{ item.product.featured_image.src | product_img_url: 'small' }}" alt="{{item.title}}">
                              </a>
                            </li>
                            <li class="link">
                              <a href="{{item.product.url | within: collections.all}}" class="bebas">{{item.title}}<i class="fa fa-caret-right"></i>
                              </a>
                            </li>
                          </ul>
                        </td>
                        <td class="title-1"><span class="shopPrice">{{item.price | money}}</span></td>
                        <td>
                          <input class="form-control input-1" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" data-min="" data-max="0" title="Qty" maxlength="12">
                        </td>
                        <td class="total title-1"><span class="shopPrice">{{ item.line_price | money }}</span></td>
                        <td class="action">
                          <button class="btn-7 btooltip" type="button" onclick="window.location='#'" data-toggle="tooltip" data-placement="top" title="" data-original-title="Remove"><a href="/cart/change?line={{ forloop.index }}&quantity=0"><i class="black fa fa-times"></i></a></button>
                        </td>
                      </tr>
                      {% endfor %}

                    </tbody>
                    <tfoot>
                      <tr class="bottom-summary">
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td class="update-quantities"><button id="update-cart" class="button hover-shadow" type="submit" name="update" value="Update cart" >Update Qty</button></td>

                        <td class="subtotal title-1"><span class="shopPrice">{{cart.total_price | money}}</span></td>
                        <td>&nbsp;</td>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
              <br>
              <div class="row">
                <div id="checkout-proceed" class="last1 text-right">
                  <button class="button hover-shadow" type="submit" name="checkout" value="Check out">Proceed to Checkout</button>
{% if additional_checkout_buttons %}

<div class="additional-checkout-buttons">
  <p>- or -</p>
  {{ content_for_additional_checkout_buttons }}
</div>

{% endif %}
                </div>
              </div>
              <div class="row">
                <div id="checkout-addnote" class="col-md-5 last">
                  <div class="wrapper-title">
                    <span class="title-3">Add a note for the seller</span>
                    <span class="line"></span>
                  </div>
                  <textarea id="note" rows="5" class="form-control" name="note">{{ cart.note }}</textarea>
                </div>
              </div>
            </form>

                <a href="/collections/all-products" class="pull-right button hover-shadow">Continue Shopping</a> <br>
          </div>
        </section>

        {% include 'mobile-cart' %}
      </div>
    </div>
  </div>



  {% endif %}





  <!-- End cart -->

</div>
</section>



