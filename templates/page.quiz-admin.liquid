{% if customer.tags contains "admin" %}
{% raw %}
<div ng-controller="MakeTestCtrl">
	<div class="container">
		<h2 class="text-center">Add A Question</h2>
		<form>
			<input type="text" placeholder="Question" ng-model="ques.question">
			<input type="text" placeholder="Image" ng-model="ques.img">
			<div class="col-sm-3" ng-repeat="answer in  ques.answers">
				<input type="text" ng-model="answer.ans" placeholder="Answer">
				<input type="text" ng-model="answer.correct" placeholder="true or blank">
			</div>
			<div ng-hide="editing">
				<a ng-click="addQuestion()" class="btn button keyboard blue_bg white btn-success">ADD</a>
			</div>
			<div ng-show="editing">
				<a ng-click="finalize()" class="btn button keyboard blue_bg white btn-success">DONE</a>
				<a ng-click="cancel()" class="btn button keyboard blue_bg white btn-success">CANCEL</a>
			</div>
		</form>
	</div>
	<div class="container">
		<h2 class="text-center">Question Bank</h2>
		<div class="col-sm-4" ng-repeat="(quesId, ques) in questions">
			<p>{{ques.question}}</p>
			<ul>
				<li ng-repeat="answer in ques.answers">
					<p ng-class="{red: answer.correct}">{{answer.ans}}</p>
				</li>
			</ul>
			<a class="btn keyboard blue_bg white btn-success" ng-click="edit(quesId)">Edit</a>
			<a class="btn keyboard red_bg white btn-danger" ng-click="remove(quesId)">Delete</a>
		</div>
	</div>
</div>
{% endraw %}
{% endif %}
