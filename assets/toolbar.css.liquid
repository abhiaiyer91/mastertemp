.dark-gray-bg {background: {{settings.color_one}};}
.header-button {padding: 18px 0;}
.header-button a { letter-spacing: 2px; border-right: 1px solid #fff; color: #fff !important; font-size: 18px; line-height: 14px; padding: 0 12px;}
.header-button:last-child a {border: none;}
.shop-button-header > a { letter-spacing: 2px; padding: 13px 6px; color: #fff !important; min-width: 80px; border-right: 2px solid {{settings.color_two}};}
.shop-button-header > a i {margin-right: 6px; font-size: 18px; line-height: 18px;}
