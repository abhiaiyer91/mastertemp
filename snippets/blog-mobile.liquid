<div class="visible-xs owlcarousel">
{% for article in blogs["blog"].articles limit:4 %}
    {% if article.tags contains 'classic' %}
            <div class="blogPostMasonry">
                <div class="blogThumb">
                    <a href="{{article.url}}"><img src="{{article.excerpt}}" class="img-thumbnail1"/></a>
                    <div class="thumbBar"></div>
                    <div class="triangle"></div>
                </div>
                <div class="blogExcerptMasonry">
                <h4><a href="{{article.url}}">{{ article.title | truncate: 25}}</a></h4>
                <p>{{article.content | strip_html | truncate: 200 }}</p><br/>
                <a href="{{ article.url }}" class="button blog">READ MORE</a>
                </div>
                <table border="1" class="blogDetails">
                <tr>
                <td><a href="#"><img src="{{'dateIcon.png' | asset_url }}" alt="" class="hidden-xs blogIcon" />{{ article.published_at | date: '%b-%d' }}</a></td>
                <td><a href="{{article.url}}#disqus_thread">0 Comments</a></td>
                <!-- <td><a href="#"><img src="images/likeIcon.png" alt="" class="blogIcon" />13</a></td> -->
                </tr>
                </table>
            </div>
    {% endif %}
    {% if article.tags contains 'video' %}
            <div class="blogPostMasonry">
                <div class="blogThumb">
                    <iframe class="videoPost" style="border:none;" src="{{article.excerpt}}" allowfullscreen></iframe>
                    <div class="thumbBar"></div>
                    <div class="triangle"></div>
                </div>
                <div class="blogExcerptMasonry">
                <h4><a href="{{article.url}}">{{ article.title | truncate: 25}}</a></h4>
                <p>{{article.content | strip_html | truncate: 200 }}</p><br/>
                <a href="{{ article.url }}" class="button blog">READ MORE</a>
                </div>
                <table border="1" class="blogDetails">
                <tr>
                <td><a href="#"><img src="{{'dateIcon.png' | asset_url }}" alt="" class="blogIcon" />{{ article.published_at | date: '%b-%d' }}</a></td>
                <td><a href="{{article.url}}#disqus_thread">0 Comments</a></td>
                <!-- <td><a href="#"><img src="images/likeIcon.png" alt="" class="blogIcon" />13</a></td> -->
                </tr>
                </table>
            </div>
    {% endif %}
    {% if article.tags contains 'photo' %}
            <div class="blogPostMasonry">
                <div class="blogThumb">
                <ul class="bxsliderBlog">
                    {{article.excerpt}}
                </ul>
                    <div class="thumbBar"></div>
                    <div class="triangle"></div>
                </div>
                <div class="blogExcerptMasonry">
                <h4><a href="{{article.url}}">{{ article.title | truncate: 25}}</a></h4>
                <p>{{article.content | strip_html | truncate: 200 }}</p><br/>
                <a href="{{ article.url }}" class="button blog">READ MORE</a>
                </div>
                <table border="1" class="blogDetails">
                <tr>
                <td><a href="#"><img src="{{'dateIcon.png' | asset_url }}" alt="" class="blogIcon" />{{ article.published_at | date: '%b-%d' }}</a></td>
                <td><a href="{{article.url}}#disqus_thread">0 Comments</a></td>
                <!-- <td><a href="#"><img src="images/likeIcon.png" alt="" class="blogIcon" />13</a></td> -->
                </tr>
                </table>
            </div>
    {% endif %}
{% endfor %}
</div>
