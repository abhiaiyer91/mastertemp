<div ng-controller="SocialCtrl" class="row services">
	{% if settings.facebook_show %}
		<div class="hidden" ng-init="addSocials('{{settings.facebook_link}}')"></div>
	{% endif %}
	{% if settings.twitter_show %}
		<div class="hidden" ng-init="addSocials('{{settings.twitter_link}}')"></div>
	{% endif %}
	{% if settings.instagram_show %}
		<div class="hidden" ng-init="addSocials('{{settings.instagram_link}}')"></div>
	{% endif %}
	{% if page.handle == 'foundation' %}
	{% if settings.foundation_link != "" %}
		<div class="hidden" ng-init="addSocials('{{settings.foundation_link}}')"></div>
	{% endif %}
	{% endif %}
	{% raw %}
    <div ng-repeat="social in socials" class="col-lg-{{column()}} col-md-{{column()}} col-sm-{{column()}} col-xs-{{column()}}">
        <a href="{{social.link}}" target="_blank"><i class="fa fa-{{social.site}} fa-5x"></i></a><br/><br/>
        <a href="{{social.link}}" target="_blank"><h4 class="hidden-xs green">{{social.abbr}}</h4></a>
    </div> 
    {% endraw %}
</div>
