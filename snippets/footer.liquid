<footer class="blue-texture">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <h4>{{settings.athlete_abbr}}</h4>
                <hr/>
                <ul>
            {% for link in linklists.footer.links %}
                <a {% if link.active %} class="active"{% endif %} href="{{ link.url }}">
                    <li>{{ link.title | upcase }}</li>
                </a>
            {% endfor %}
                </ul>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-8 col-xs-12">
                <h4>NEWSLETTER</h4>
                <hr/>
                <p>*By joining - you agree to receive updates, newsletters and offers.</p>
                    {% include 'sendy.newsletter' %}
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <h4>CONTACT</h4>
                {% if settings.contact1_show %}
                    <hr/>
                    <p>{{settings.contact1_text}} <a href="mailto:{{settings.contact1_email}}">{{settings.contact1_email}}</a></p>
                {% endif %}
                {% if settings.contact2_show %}
                    <hr/>
                    <p>{{settings.contact2_text}} <a href="mailto:{{settings.contact2_email}}">{{settings.contact2_email}}</a></p>
                {% endif %}
                {% if settings.contact3_show %}
                    <hr/>
                    <p>{{settings.contact3_text}} <a href="mailto:{{settings.contact3_email}}">{{settings.contact3_email}}</a></p>
                {% endif %}
            </div>

            <div class="col-lg-3 col-md-3 hidden-sm col-xs-12">
                <h4>LATEST TWEETS</h4>
                <hr/>
                    <a class="twitter-timeline" href="https://twitter.com/{{settings.athlete_twitter_name}}" data-widget-id="{{settings.athlete_twitter_widget}}" data-theme="dark" data-chrome="nofooter noheader transparent" data-tweet-limit="2">Tweets by @{{athlete_twitter_name}}</a>
                    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
            </div>
        </div><!-- end row -->
    </div><!-- end footer container -->

    <!-- up to top -->
    <a href="#" class="btnzo"><i class="go-top fa fa-angle-double-up "></i></a>
    <!--//end-->
</footer>

<div class="bottomBar grey-texture">
    <div class="container">

        <ul class="socialIcons hidden-xs">
            <li>{% if settings.facebook_show %}<a href="{{ settings.facebook_link }}" target="_blank"><img src="{{ 'fbIcon.png' | asset_url }}" /></a>{%endif%}</li>
            <li> {% if settings.twitter_show %}<a href="{{ settings.twitter_link }}" target="_blank"><img src="{{ 'twitterIcon.png' | asset_url }}" />{%endif%}</a></li>
        </ul>

        <p class="bottom-sig">powered by // <a href="http://anthro.is" target="_blank">anthro.is</a> // a digital partner & platform <br/>
        <a href="{{settings.athlete_mans}}" target="_blank">{{settings.athlete_man}}</a> Management Partner</p>

    </div>
</div>
