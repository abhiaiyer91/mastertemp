		{% if template == 'article' %}
		<meta property="og:title" content="{{article.title}}">
		<meta property="og:description" content="{{article.content | strip_html | truncate: 200}}">
		<meta property="og:image" content="{{article.excerpt}}">
		{% endif %}
		{% if template == 'product' %}
		<meta property="og:title" content="{{product.title}}">
		<meta property="og:description" content="{{product.content | strip_html | truncate: 200}}">
		<meta property="og:image" content="http:{{ product.featured_image | product_img_url: 'grande' }}">
		{% endif %}


